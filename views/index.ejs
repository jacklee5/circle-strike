<!DOCTYPE HTML>
<html>
    <head>
        <title>Circle Strike: Globular Offensive</title>
        <meta charset = "utf-8">
        <link href = "/static/style.css" rel = "stylesheet">
        <link href = "/static/styles/style.css" rel = "stylesheet">
    </head>
    <body>
        <!-- Home -->
        <div style="text-align: center">
            <div id = "top_page_text">
                <h1 id = "title" style = "font-size: 100px">SNEKSMASH 2</h1>                    
                <h6>((You're special, babe))</h6>
            </div>
        </div>
        <div>
            <img src="\static\img\heartBerd.png" id = "bird_pic" width=200 height=200 >
            <div class = "page start">
                <form id = "join-form">
                    <input id = "username" placeholder = "Enter your name">
                    <button>play</button>
                </form>
            </div> 
        </div> 
        <!-- game -->
        <div class = "page">
            <canvas id = "game"></canvas>
            <div id = "game-info">
                <header>
                    <span id = "map-name">Forest</span> - <span id = "game-mode">Deathmath</span>
                </header>
                <table>
                    <tr>
                        <th>Rank</th>
                        <th>Name</th>
                        <th span = "score-type">Kills</th>
                    </tr>
                    <div id = "ranks">
                        <tr>
                            <td>1</td>
                            <td>Jack</td>
                            <td>20</td>
                        </tr>
                    </div>
                </table>
            </div>
        </div>
        <script src = "/socket.io/socket.io.js"></script>
        <script src = "/static/js/bundle.js"></script>
    </body>
</html>