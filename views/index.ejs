<!DOCTYPE HTML>
<html>
    <head>
        <title>Circle Strike: Globular Offensive</title>
        <meta charset = "utf-8">
        <link href = "/static/style.css" rel = "stylesheet">
    </head>
    <body>
        <!-- home -->
        <div class = "page start">
            <form id = "join-form">
                <input id = "username" placeholder = "Enter your name">
                <button>play</button>
            </form>
        </div>
        <!-- game -->
        <div class = "page">
            <canvas id = "game"></canvas>
            <div id = "game-info">
                <header>
                    <span id = "map-name">Forest</span> - <span id = "game-mode">Deathmath</span>
                </header>
                <table id = "ranks"></table>
            </div>
        </div>
        <!-- death screen -->
        <div class = "page">
            you are death
            <button id = "respawn-button">Respawn</button>
        </div>
        <script src = "/socket.io/socket.io.js"></script>
        <script src = "/static/js/bundle.js"></script>
    </body>
</html>